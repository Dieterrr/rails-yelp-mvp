<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Restaurants#new</h1>

      <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"] %>
      <%= f.input :phone_number %>

      <%= f.submit "add a Restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
